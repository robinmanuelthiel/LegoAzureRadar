<Window x:Class="MindstormsTest.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MindstormsTest.Wpf"
        mc:Ignorable="d"
        Title="LEGO Mindstorms Test" Height="350" Width="525">
    <Grid>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Event log:" Grid.Row="0" />
            <TextBox Name="LogText" Margin="0, 5, 0 ,0" AcceptsReturn="True" IsReadOnly="True" Grid.Row="1" Background="#eee" VerticalScrollBarVisibility="Auto" />
        </Grid>
    </Grid>
</Window>
